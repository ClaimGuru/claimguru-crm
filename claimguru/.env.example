# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Stripe Configuration (Optional)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Security Configuration
VITE_APP_ENVIRONMENT=production
VITE_API_BASE_URL=https://your-domain.com

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Session Security
VITE_SESSION_TIMEOUT_MINUTES=60

# Password Policy
VITE_MIN_PASSWORD_LENGTH=12
VITE_REQUIRE_SPECIAL_CHARS=true
VITE_REQUIRE_NUMBERS=true
VITE_REQUIRE_UPPERCASE=true

# Security Headers
VITE_ENABLE_SECURITY_HEADERS=true
VITE_CSP_ENABLED=true

# Email Verification
VITE_REQUIRE_EMAIL_VERIFICATION=true

# Audit Logging
VITE_ENABLE_AUDIT_LOGGING=true